<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="NumpadWidget" t-inherit="point_of_sale.NumpadWidget" t-inherit-mode="extension" owl="1">
        <xpath expr="//button[@t-on-click=&quot;sendInput('6')&quot;]" position="after">
            <button class="mode-button" t-att-class="{'selected-mode': props.activeMode === 'tare'}"
                t-on-click="changeMode('tare')">Tare</button>
        </xpath>
        <xpath expr="//button[@t-on-click=&quot;sendInput('9')&quot;]" position="after">
            <xpath expr="//button[@t-on-click=&quot;changeMode('discount')&quot;]" position="move"/>
        </xpath>
        <xpath expr="//button[@t-on-click='sendInput(decimalSeparator)']" position="after">
            <xpath expr="//button[@t-on-click=&quot;changeMode('price')&quot;]" position="move"/>
        </xpath>
    </t>

</templates>
