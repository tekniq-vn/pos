<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="ScaleScreen" t-inherit="point_of_sale.ScaleScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('js-weight')]" position="before">
            <div class="weight-label">
                Gross Weight
            </div>
            <t t-if="env.pos.config.iface_gross_weight_method == 'scale'">
                <div class="weight-value weight-value-fixed" id="container_weight_gross">
                    <t t-esc="productGrossWeightString"/>
                </div>
            </t>
            <t t-else="">
                <div class="weight-value weight-value-alterable">
                    <input type="number" step="any" t-on-keyup="onKeyup" t-on-click="onClick" class="input-weight" t-model="state.gross_weight" id="input_gross_weight" placeholder="0.000"/>
                    <t t-esc="env.pos.config.iface_tare_uom_id[1]"/>
                </div>
            </t>
            <div class="weight-label">
                Tare
            </div>
            <t t-if="env.pos.config.iface_tare_method == 'barcode'">
                <div class="weight-value weight-value-fixed" id="container_weight_tare">
                    <t t-esc="productTareWeightString"/>
                </div>
            </t>
            <t t-else="">
                <div class="weight-value weight-value-alterable">
                    <input type="number" step="any" class="input-weight" t-on-keyup="onKeyup" t-on-click="onClick" t-model="state.tare" id="input_weight_tare" placeholder="0.000"/>
                    <t t-esc="env.pos.config.iface_tare_uom_id[1]"/>
                </div>
            </t>
        </xpath>
    </t>
</templates>
